{
    "manifest_version": 3,
    "name": "Better Scrollbar",
    "description": "Замінює стандартні скролбари на кастомний стиль.",
    "version": "1.2",
    "icons": {
        "16": "/icon/BscrollBar.png",
        "48": "/icon/BscrollBar.png",
        "128": "/icon/BscrollBar.png"
    },
    "content_scripts": [{
        "matches": ["<all_urls>"],
        "css": ["styles.css"],
        "js": ["script.js"],
        "run_at": "document_start"
    }],
    "action": {
        "default_title": "Better Scrollbar"
    }
}
